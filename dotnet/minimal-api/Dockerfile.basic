# ==============================================================================
# Basic (Non-Optimized) Dockerfile
# ==============================================================================
FROM mcr.microsoft.com/dotnet/sdk:8.0

WORKDIR /app

# Copy everything
COPY . .

# Restore and build
RUN dotnet restore
RUN dotnet publish -c Release -o /app/publish

WORKDIR /app/publish

EXPOSE 8080

ENV ASPNETCORE_URLS=http://+:8080

CMD ["dotnet", "MinimalApiDemo.dll"]
