# ==============================================================================
# Basic (Non-Optimized) Dockerfile
# ==============================================================================
FROM maven:3.9-eclipse-temurin-21

WORKDIR /app

# Copy everything
COPY . .

# Build and run in the same image
RUN mvn package -DskipTests

EXPOSE 8080

CMD ["java", "-jar", "target/quarkus-app/quarkus-run.jar"]
